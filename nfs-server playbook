---
- hosts: nfs
  become: yes
  tasks:
    - name: install nfs-utils
      yum: name=nfs-utils state=latest

    - name: Create a mountable directory if it does not exist
      file:
        path: /share
        state: directory
        owner: ansible
        group: ansible
        mode: '0775'
    - name: enable rpcbind nfslock nfs
      service:
        name: "{{ item }}"
        enabled: yes
      with_items:
        - rpcbind
        - nfslock
        - nfs
        - nfs-idmap
    - name: Copy exports file.
      template:
        src: /home/ansible/exports.j2
        dest: /etc/exports
        owner: ansible
        group: ansible
        mode: 0644
    - name: NFS apply change configrue
      systemd:
         state: reloaded
         name: nfs
    - name: export
      shell: exportfs -a
